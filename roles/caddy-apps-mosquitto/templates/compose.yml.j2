
x-common: &common
  security_opt:
    - no-new-privileges:true
  restart: unless-stopped


services:
  mosquitto:
    image: eclipse-mosquitto
    container_name: mosquitto
    <<: *common
    networks:
      - main_net
    environment:
      - TZ=Europe/Paris
    ports:
      - "1883:1883"
    volumes:
      - ./config/mosquitto.conf:/mosquitto/config/mosquitto.conf:ro
      - ./data/mosquitto:/mosquitto/data

