@nextcloud host {{ app_subdomain }}.{{ domain_name }}
handle @nextcloud {
	reverse_proxy {{ app_endpoint }}
	encode zstd gzip
	rewrite /.well-known/caldav /remote.php/dav
	rewrite /.well-known/carddav /remote.php/dav
	
	redir /.well-known/carddav https://{host}/remote.php/dav/
	redir /.well-known/caldav https://{host}/remote.php/dav/

	# handle /api/auth/signup* {
